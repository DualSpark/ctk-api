{
  "variables": {
    "aws_access_key_id": "",
    "aws_secret_key": "",
    "package_name": "ctk-api-episode",
    "package_version" : "0.1.0",
    "api_name" : "episode",
    "aws_region": "us-west-2"
  },
  "builders": [
    {
      "type": "amazon-ebs",
      "access_key": "{{user `aws_access_key_id`}}",
      "secret_key": "{{user `aws_secret_key`}}",
      "region": "{{user `aws_region`}}",
      "source_ami": "ami-5189a661",
      "instance_type": "t2.medium",
      "ssh_username": "ubuntu",
      "ami_name": "dualspark-{{user `api_name`}}-{{timestamp}}",
      "ami_description": "Demo AMI for deploying CTK API Microservice system - ctk-api-episode endpoint"
    }
  ],
  "provisioners": [
    {
      "type": "chef-solo",
      "cookbook_paths": [
        "berks-cookbooks"
      ],
      "run_list": [
        "ctk-api::default"
      ],
      "json": {
        "ctk-api": {
          "package_name": "{{user `package_name`}}",
          "package_version" : "{{user `package_version`}}",
          "name": "{{user `api_name`}}"
        }
      }
    }
  ]
}
